<UserControl x:Class="TemporaTasks.UserControls.IconButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TemporaTasks.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>

        <Border x:Name="Button" Background="{StaticResource DarkBlue}" CornerRadius="5" Opacity="0" IsMouseDirectlyOverChanged="IconButton_IsMouseDirectlyOverChanged"/>

        <Image x:Name="Icon" Source="{Binding SVGSource, RelativeSource={RelativeSource AncestorType=UserControl}}" MaxWidth="15" MaxHeight="15" Opacity="0.25" IsHitTestVisible="False"/>

    </Grid>

</UserControl>
