<UserControl x:Class="TemporaTasks.UserControls.Tags"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TemporaTasks.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="80">

    <Border x:Name="TagBackground" Background="{StaticResource DarkerBlue}" CornerRadius="2" BorderThickness="0" Margin="10 0 0 0" Height="20">

        <Label Content="{Binding TagText, RelativeSource={RelativeSource AncestorType=UserControl}}" FontFamily="/TemporaTasks;component/Resources/Fonts/Manrope.ttf#Manrope Regular" Foreground="{StaticResource Text}" FontSize="10" HorizontalAlignment="Left" VerticalAlignment="Center" VerticalContentAlignment="Center" Padding="0" Margin="5 2 5 2" IsHitTestVisible="False"/>

    </Border>

</UserControl>
